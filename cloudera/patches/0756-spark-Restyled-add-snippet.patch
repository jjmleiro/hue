From 0c4da5014bef645f976ef8038688a4bb005b212c Mon Sep 17 00:00:00 2001
From: Enrico Berti <hello@enricoberti.com>
Date: Thu, 5 Feb 2015 15:51:56 +0100
Subject: [PATCH 0756/1173] [spark] Restyled add snippet

---
 apps/spark/src/spark/templates/editor.mako |    4 ++--
 apps/spark/static/css/spark.css            |   17 +++++++++++------
 2 files changed, 13 insertions(+), 8 deletions(-)

diff --git a/apps/spark/src/spark/templates/editor.mako b/apps/spark/src/spark/templates/editor.mako
index 2979a13..0be8b56 100644
--- a/apps/spark/src/spark/templates/editor.mako
+++ b/apps/spark/src/spark/templates/editor.mako
@@ -254,8 +254,8 @@ ${ commonheader(_('Query'), app_name, user, "68px") | n,unicode }
 
       <h1 class="empty" data-bind="visible: snippets().length == 0">${ _('Add a snippet to start your new notebook') }</h1>
 
-      <div class="add-snippet pointer">
-        <div class="overlay pointer" data-bind="click: function(notebook, e){ if (!($(e.target).is('select'))){ newSnippet(); } }">
+      <div class="add-snippet pointer" data-bind="click: function(notebook, e){ if (!($(e.target).is('select'))){ newSnippet(); } }">
+        <div class="overlay pointer">
           <select data-bind="options: $root.availableSnippets, value: selectedSnippet, optionsText: 'name', optionsValue: 'type'" style="width: 115px">
           </select>
           <i class="fa fa-plus-circle fa-5x" title="${ _('Add a new snippet') }"></i>          
diff --git a/apps/spark/static/css/spark.css b/apps/spark/static/css/spark.css
index c4ce4db..c4d73c5 100644
--- a/apps/spark/static/css/spark.css
+++ b/apps/spark/static/css/spark.css
@@ -41,7 +41,6 @@
   margin-top: 60px;
   margin-bottom: 60px;
   background-color: #F1F1F1;
-  cursor: default;
 }
 
 .add-snippet .CodeMirror {
@@ -55,11 +54,17 @@
 }
 
 .add-snippet .overlay {
-  position: absolute;
-  margin-top: -60px;
   z-index: 300;
-  left: 50%;
-  margin-left: -60px;
+  margin-left: auto;
+  margin-right: auto;
+  width: 220px;
+  padding: 20px;
+}
+
+.add-snippet .overlay select {
+  float: left;
+  margin-top: 20px;
+  margin-right: 10px;
 }
 
 .add-snippet .overlay i {
@@ -67,7 +72,7 @@
   cursor: pointer;
 }
 
-.add-snippet .overlay i:hover {
+.add-snippet .overlay i:hover, .add-snippet:hover .overlay i {
   color: #666;
 }
 
-- 
